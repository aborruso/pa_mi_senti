---
import "../styles/global.css";
import { buildInfoPath, buildHomePath, buildPrivacyPath, buildDisclaimerPath } from "../lib/paths";

interface Props {
  title?: string;
  description?: string;
}

const { title = "PA Mi Senti", description } = Astro.props as Props;
const CONTRIBUTE_GUIDE_URL = "https://github.com/aborruso/pa_mi_senti/blob/main/CONTRIBUIRE.md";

// Costruisci URL completi dinamici per meta tag social
const BASE_URL = import.meta.env.BASE_URL.replace(/\/$/, "");
const SITE_URL = import.meta.env.SITE || "https://aborruso.github.io";
// Astro.url.pathname include gi√† il base path in produzione, quindi usiamo direttamente SITE_URL + pathname
const currentPageUrl = `${SITE_URL}${Astro.url.pathname}`;
const ogImageUrl = `${SITE_URL}${BASE_URL}/pa_mi_senti_og.png`;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta
      name="description"
      content={description ?? "Trova il canale giusto per contattare la tua Pubblica Amministrazione."}
    />

    <!-- OpenGraph Meta Tags -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description ?? "Trova il canale giusto per contattare la tua Pubblica Amministrazione."}
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentPageUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:secure_url" content={ogImageUrl} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="it_IT" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content={description ?? "Trova il canale giusto per contattare la tua Pubblica Amministrazione."}
    />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:site" content="@aborruso" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href={`${BASE_URL}/favicon.svg`} />

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href={`${BASE_URL}/icon-192.svg`} />

    <!-- Web App Manifest -->
    <link rel="manifest" href={`${BASE_URL}/manifest.json`} />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0b7285" />
  </head>
  <body>
    <!-- Skip to main content link for keyboard/screen reader users -->
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:left-4 focus:top-4 focus:z-50 focus:rounded-lg focus:bg-brand focus:px-4 focus:py-2 focus:text-sm focus:font-semibold focus:text-white focus:outline-none focus:ring-4 focus:ring-brand/50"
    >
      Salta al contenuto principale
    </a>
    <div class="min-h-screen bg-slate-50">
      <header class="border-b border-slate-200 bg-white">
        <div class="mx-auto flex max-w-5xl flex-col gap-1 px-4 py-6 sm:flex-row sm:items-end sm:justify-between">
          <div>
            <a href={buildHomePath()} class="inline-block transition hover:opacity-70 focus:outline-none focus-visible:ring-4 focus-visible:ring-brand/50 focus-visible:rounded">
              <p class="text-xs uppercase tracking-wide text-slate-500">PA MI SENTI</p>
              <h1 class="text-2xl font-semibold text-slate-900">
                Contatta la tua PA in pochi click
              </h1>
            </a>
          </div>
          <nav aria-label="Menu principale">
            <div class="flex flex-col items-end gap-4">
              <p class="text-sm text-slate-500">
                Scegli la citt√†, il tema e ottieni il canale migliore senza cercare ovunque.
              </p>
              <div class="flex gap-2">
                <a
                  href={buildInfoPath()}
                  class="rounded-lg border border-slate-300 px-3 py-1 text-xs font-medium text-slate-600 transition hover:bg-slate-100 focus:outline-none focus-visible:ring-4 focus-visible:ring-brand/50"
                  aria-label="Informazioni sul progetto PA Mi Senti"
                >
                  ‚ÑπÔ∏è Info
                </a>
                <a
                  href={CONTRIBUTE_GUIDE_URL}
                  target="_blank"
                  rel="noreferrer noopener"
                  class="rounded-lg border border-slate-300 px-3 py-1 text-xs font-medium text-slate-600 transition hover:bg-slate-100 focus:outline-none focus-visible:ring-4 focus-visible:ring-brand/50"
                  aria-label="Guida su GitHub per contribuire a PA Mi Senti"
                >
                  ü§ù Contribuisci
                </a>
              </div>
            </div>
          </nav>
        </div>
      </header>
      <main id="main-content" class="mx-auto max-w-5xl px-4 py-8">
        <slot />
      </main>
      <footer class="border-t border-slate-200 bg-white">
         <div class="mx-auto flex max-w-5xl flex-col items-center justify-center gap-4 px-4 py-6">
           <div class="flex flex-col items-center gap-2 text-xs text-slate-500 sm:flex-row">
             <a
               href={buildPrivacyPath()}
               class="transition hover:text-slate-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand/50 focus-visible:rounded"
               aria-label="Privacy Policy di PA Mi Senti"
             >
               Privacy
             </a>
             <span class="hidden sm:inline">|</span>
             <a
               href={buildDisclaimerPath()}
               class="transition hover:text-slate-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-brand/50 focus-visible:rounded"
               aria-label="Disclaimer di PA Mi Senti"
             >
               Disclaimer
             </a>
           </div>
           <span class="text-xs text-slate-500">perch√© aborruso √® pigro</span>
         </div>
       </footer>
    </div>
  </body>
</html>
