---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
}

const { title = "PA Mi Senti", description } = Astro.props as Props;
---

<!doctype html>
<html lang="it">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta
      name="description"
      content={description ?? "Trova il canale giusto per contattare la tua Pubblica Amministrazione."}
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/pa_mi_senti/favicon.svg" />

    <!-- Apple Touch Icon -->
    <link rel="apple-touch-icon" href="/pa_mi_senti/icon-192.svg" />

    <!-- Web App Manifest -->
    <link rel="manifest" href="/pa_mi_senti/manifest.json" />

    <!-- Theme Color -->
    <meta name="theme-color" content="#0b7285" />
  </head>
  <body>
    <div class="min-h-screen bg-slate-50">
      <header class="border-b border-slate-200 bg-white">
        <div class="mx-auto flex max-w-5xl flex-col gap-1 px-4 py-6 sm:flex-row sm:items-end sm:justify-between">
          <div>
            <a href="/pa_mi_senti/" class="inline-block transition hover:opacity-70">
              <p class="text-xs uppercase tracking-wide text-slate-500">PA MI SENTI</p>
              <h1 class="text-2xl font-semibold text-slate-900">
                Contatta la tua PA in pochi click
              </h1>
            </a>
          </div>
          <p class="text-sm text-slate-500">
            Scegli la città, il tema e ottieni il canale migliore senza cercare ovunque.
          </p>
        </div>
      </header>
      <main class="mx-auto max-w-5xl px-4 py-8">
        <slot />
      </main>
      <footer class="border-t border-slate-200 bg-white">
        <div class="mx-auto flex max-w-5xl items-center justify-center px-4 py-6 text-xs text-slate-500">
          <span>perché aborruso è pigro</span>
        </div>
      </footer>
    </div>
  </body>
</html>
